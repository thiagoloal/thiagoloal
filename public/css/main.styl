@import './_reset.styl'
@import './_variables.styl'
main
  width: 100%
  height 100vh
.t
  &-container
    background: $gradient
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
  &-construction
    width: 100%
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    &_image
      width: 100%
      max-width: 290px
      padding: 5px
      img
        width: 100%
    &_title
      color: $pink
      font: $sans
      text-transform: uppercase
      font-weight: bold
      font-size: 1.5em
      padding: 0 5px
      text-align: center
      padding-top: 30px
      text-shadow: 0px 0px 4px $pink
