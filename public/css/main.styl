@import './_reset.styl'
@import './_variables.styl'

main
  width: 100%
  height 100vh
  padding: 0
  margin: 0
body
  background: $gradient
.t
  &-sol
    width: 50%
    align-self: flex-end
  &-container
    display: flex
    align-items: center
    justify-content: space-between
  &-opening
    width: 30%
    padding: 10px
    &--nav
      display flex
      flex-direction: column
      a
        width: min-content
        color: $pink
        font-size: 3em
        text-transform: uppercase
        cursor: pointer
        font-family: Josefin Sans
        font-weight:500
        display: inline-block
        position: relative
        margin-bottom: .2em
        padding: 0 3px
        &:hover
          &:before
            content: ' '
            width: 100%
            background-color: $blue
            height: 10px
            position: absolute
            top: calc(50% - 10px)
  &-construction
    width: 100%
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    &_image
      width: 100%
      padding: 5px
      max-width: 400px
      img
        width: 100%
    &_title
      color: $pink
      font: $sans
      text-transform: uppercase
      font-weight: bold
      font-size: 1.5em
      padding: 0 5px
      text-align: center
      padding-top: 30px
      text-shadow: 0px 0px 4px $pink
.svg-container
  z-index: -1
  svg
    opacity .8
    path
      stroke-width: 0.05
      stroke: $pink
      filter: url(#glow)
      fill-opacity: 0